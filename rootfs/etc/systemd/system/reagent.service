[Unit]
Description=Reagent
ConditionPathExists=/opt/reagent/reswarm-mode
After=reswarm.service
#reagent.socket
#Requires=reagent.socket

[Service]
Type=simple
ExecStartPre=/usr/sbin/reagent-setup.sh
ExecStart=/opt/reagent/Reagent-active -config /opt/reagent/device-config.reswarm -debug
ExecStartPost=/usr/sbin/reagent-traffic.sh
# RestartSec=30
Restart=no
# Restart=always
# RemainAfterExit=no

# CPUAccounting=1
# MemoryAccounting=1
# BlockIOAccounting=1
# IPAccounting=true

[Install]
WantedBy=sysinit.target
